<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>RESTauranter</title>
</head>
<body>
    <h1>Write a new Review</h1>
    @model Restauranter.Models.Review
    <form asp-controller="Home" asp-action="Add" method="POST">
        <span asp-validation-for="reviewer"></span>
        <label asp-for="reviewer">Reviewer Name:</label>
        <input asp-for="reviewer" class="form-control"/>
        <span asp-validation-for="restaurant"></span>
        <label asp-for="restaurant">Restaurant Name:</label>
        <input asp-for="restaurant" class="form-control"/>
        <span asp-validation-for="review"></span>
        <label asp-for="review">Review:</label>
        <textarea cols="30" rows="10" asp-for="review" class="form-control"></textarea>
        <span asp-validation-for="date"></span>
        <label asp-for="date">Date of Visit:</label>
        <input type="datetime-local" asp-for="date" class="form-control">
        <span asp-validation-for="stars"></span>
        <label asp-for="stars">Stars:</label>
        <select asp-for="stars" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        <input type="submit" value="Submit" class="btn-primary">
    </form>
</body>
</html>